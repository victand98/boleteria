<script src="../assets/assets/js/validator.js"></script>
<script>    

    $().ready(function () {
        
        // validate signup form on keyup and submit
        $("#formulario").validate({
            rules: {
                cedula: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                    number: true
                },
                nombre: {
                    required: true,
                    minlength: 3
                },
                
            },
            messages: {
                cedula: {
                    required: "Ingrese la cedula",
                    minlength: "Usted puede agregar minimo 10 caracteres",
                    maxlength: "Usted puede agregar maximo 10 caracteres",
                    number: "Solo numeros"
                }
            }
        });

    });
</script>

<header class="major">
    <h3>Registros</h3>    
</header>
<section id="content">
<!--    MarcarÃ¡ los errores que tengamos al momento de registrar-->
    <% if (locals.flash) { %>
        <div class="alert alert-danger">
            <%- locals.flash %>
        </div>
        <% } %>    
    <form method="POST" action="#" id="formulario">
        <div class="row gtr-uniform gtr-50">
            <div class="col-6 col-12-xsmall">
                <input type="text" name="cedula"  placeholder="Cedula" />
            </div>
            <div class="col-6 col-12-xsmall">
                <input type="text" name="nombres" placeholder="Nombres" />
            </div>

            <div class="col-12">
                <ul class="actions navbar-nav">
                    <li class="nav-item"><input type="submit" value="GUARDAR" class="navbar-toggler" /></li>
                    <li class="nav-item"><a href="#" class="navbar-toggler">CANCELAR</a></li>
                </ul>
            </div>
        </div>
    </form>
</section>

